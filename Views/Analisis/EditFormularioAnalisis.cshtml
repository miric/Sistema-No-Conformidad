    }


}


<div class="row">
    <!-- Welcome -->
    <div class="col-lg-12">
        <div class="alert alert-info">
            <i></i><P>EDITAR ANALSIS </P>

        </div>
    </div>
    <!--end  Welcome -->
</div>
<form asp-action="EditFormularioAnalisis" asp-controller="Analisis" class="form-horizontal" role="form" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>   


    <div class="form-group">
        <label asp-for="@Model.EventoId" class="col-lg-2">Id Evento</label>
        <div class="col-lg-3">
            <input asp-for="@Model.EventoId" class="form-control"
                   placeholder="Id Evento" readonly="readonly">
        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.EventoId" class="col-lg-2">Id Analisis</label>
        <div class="col-lg-3">
            <input asp-for="@Model.AnalisisUnico.Id" class="form-control"
                   placeholder="Id Evento" readonly="readonly">
        </div>
    </div>

    @*<div class="form-group">
        <label asp-for="@Model.EventoId" class="col-lg-2">EventoId</label>
        <div class="col-lg-5">
            <input asp-for="@Model.EventoId" id="opciones_1"  readonly="readonly" />
        </div>
    </div>*@

    @if (Model.AnalisisUnico.FechaRegistro != null)
    {
        <div class="form-group">
            @*<label  class="col-lg-2 control-label">Fecha Identificacion</label>*@

            @Html.Label("Fecha Registro", null, new { @class = " col-lg-2" })
            <div class="col-lg-3">
                <input class="form-control" name="FechaRegistro" asp-for="@Model.AnalisisUnico.FechaRegistro" type="date" required />
            </div>

        </div>

    }
    else
    {
        <div class="form-group">
            @*<label  class="col-lg-2 control-label">Fecha Identificacion</label>*@

            @Html.Label("Fecha Registro", null, new { @class = " col-lg-2" })
            <div class="col-lg-3">
                <input class="form-control" name="FechaRegistro"  type="date" required />
            </div>

        </div>

    }

    @if (Model.AnalisisUnico.AplicaRca == true)
    {

        <div class="form-group">
            <label class="col-lg-2">¿Requiere Analisis Causa Raiz?</label>
            <div class="col-lg-3">

                <div class="radio">
                    <label>
                        <input type="radio" checked name="AplicaRCA" id="opciones_1" value="true" required>
                        SI
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" name="AplicaRCA" id="opciones_2" value="false" required>
                        NO
                    </label>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="form-group">
            <label class="col-lg-2">¿Requiere Analisis Causa Raiz?</label>
            <div class="col-lg-3">

                <div class="radio">
                    <label>
                        <input type="radio" name="AplicaRCA" id="opciones_1" value="true" required>
                        SI
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" checked name="AplicaRCA" id="opciones_2" value="false" required>
                        NO
                    </label>
                </div>
            </div>
        </div>

    }



    <div class="form-group">
        <label class="col-lg-2">Descripción</label>
        <div class="col-lg-5">
            <textarea class="form-control" 
                      placeholder="Descripción"  asp-for="@DescripcionTrim"  name="Descripcion"> </textarea>
        </div>
    </div>
    <div class="text-danger" asp-validation-summary="All"></div>  
    <button type="submit"  class="btn btn-warning">Editar</button>
    <a asp-action="Index" asp-controller="EventoSecuencia" class="btn btn-default" asp-route-EventoID="@Model.EventoId">Cancelar</a>
</form>    