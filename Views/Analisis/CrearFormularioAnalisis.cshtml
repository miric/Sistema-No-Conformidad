
@model AnalisisModels
<div class="row">
    <!-- Welcome -->
    <div class="col-lg-12">
        <div class="alert alert-info">
            <i></i><P>REGISTRAR ANALISIS </P>

        </div>
    </div>
    <!--end  Welcome -->
</div>
<form asp-action="CrearFormularioAnalisis" asp-controller="Analisis" class="form-horizontal" role="form" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>   

    <div class="form-group">
        <label class="col-lg-2">EventoId</label>
        <div class="col-lg-3">
            <input class="form-control" asp-for="@Model.EventoId" id="opciones_1" value="@Model.EventoId" readonly="readonly"/>
        </div>
    </div>


    <div class="form-group">
        @*<label  class="col-lg-2 control-label">Fecha Identificacion</label>*@

        @Html.Label("Fecha Registro", null, new { @class = " col-lg-2" })
        <div class="col-lg-3">
            <input class="form-control" asp-for="FechaRegistro" name="FechaRegistro" type="date" required/>
        </div>

    </div>




<div class="form-group">
    <label class="col-lg-2">¿Requiere Analisis Causa Raiz?</label>
    <div class="col-lg-3">
       
        <div class="radio">
            <label>
                <input type="radio" name="AplicaRCA" id="opciones_1" value="true" required>
                SI
            </label>
        </div>
        <div class="radio">
            <label>
                <input type="radio" name="AplicaRCA" id="opciones_2" value="false">
                NO
            </label>
        </div>
    </div>
</div>

<div class="form-group">
    <label class="col-lg-2">Descripción</label>
    <div class="col-lg-5">
        <textarea class="form-control" asp-for="Descripcion" id="textarea" name="Descripcion"
                  placeholder="Descripción"> </textarea>
    </div>
</div>  
        <button type="submit" asp-action="CrearFormularioAnalisis" asp-controller="Analisis" class="btn btn-primary">Registar</button>
        <a asp-action="Index" asp-controller="EventoSecuencia" class="btn btn-default" asp-route-EventoID="@Model.EventoId">Cancelar</a>
</form>