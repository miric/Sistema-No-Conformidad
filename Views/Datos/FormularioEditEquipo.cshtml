@model CreateEquipo
@{
    ViewData["Title"] = "Datos Page";
}

@{
    string NombreEquipo = null;
    if (Model.EquipoUnico.Nombre != null)
    {
        NombreEquipo = Model.EquipoUnico.Nombre.TrimEnd();
    }
}


<div class="row">
    <!-- Welcome -->
    <div class="col-lg-12">
        <div class="alert alert-info">
            <i></i><P>EDIT EQUIPO</P>

        </div>
    </div>
    <!--end  Welcome -->
</div>

<div>
    <div class="col-lg-10">
        <form asp-action="FormularioEditEquipo" class="form-horizontal" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="@Model.EquipoUnico.Id" class="col-lg-2 ">Id</label>
                <div class="col-lg-3">
                    <input asp-for="@Model.EquipoUnico.Id" class="form-control" required  readonly="readonly"/>
                </div>
            </div>
            
            
            <div class="form-group">
                <label class="col-lg-2 ">Nombre</label>
                <div class="col-lg-3">
                    <input asp-for="Nombre" class="form-control" required  value="@NombreEquipo"/>
                </div>
            </div>





            <button type="submit" class="btn btn-warning">Editar Equipo</button>
            <a asp-action="IndiceEquipos" class="btn btn-default">Cancelar</a>
        </form>
    </div>
    <div class="col-lg-2">

    </div>
</div>