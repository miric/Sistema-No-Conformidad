@model CreateEquipo
@{
    ViewData["Title"] = "Datos Page";
}

<div class="row">
    <!-- Welcome -->
    <div class="col-lg-12">
        <div class="alert alert-info">
            <i></i><P>FORMULARIO CREAR EQUIPO</P>

        </div>
    </div>
    <!--end  Welcome -->
</div>

<div>
    <div class="col-lg-10">
        <form asp-action="FormularioCrearEquipo" class="form-horizontal" method="post">

            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <label class="col-lg-2 ">Nombre</label>
                <div class="col-lg-3">
                    <input asp-for="Nombre" class="form-control" required />
                </div>
            </div>




            <button type="submit" class="btn btn-primary">Crear Equipo</button>
            <a asp-action="IndiceEquipos" class="btn btn-default">Cancelar</a>
        </form>
    </div>
    <div class="col-lg-2">

    </div>
</div>