<div>
    <div class="col-lg-10">
        <form asp-action="FormularioEditComponente" class="form-horizontal" method="post">

            <div class="form-group">
                <label asp-for="@Model.ComponenteUnico.Id" class="col-lg-2 ">ID</label>
                <div class="col-lg-3">
                    <input asp-for="@Model.ComponenteUnico.Id" class="form-control" placeholder="Nombre"  readonly="readonly" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="@Model.ComponenteUnico.Nombre" class="col-lg-2 ">Nombre</label>
                <div class="col-lg-3">
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre"  required />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ComponenteUnico.NumeroSerie" class="col-lg-2 ">Numerio Serie</label>
                <div class="col-lg-3">
                    <input asp-for="NumeroSerie" class="form-control" placeholder="Numerio Serie" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ComponenteUnico.Posicion" class="col-lg-2 ">Posición</label>
                <div class="col-lg-3">
                    <input asp-for="Posicion" class="form-control" placeholder="Posición" />
                </div>
            </div>




            <div class="text-danger" asp-validation-summary="All"></div>

            <button type="submit" class="btn btn-warning">Editar</button>
            <a asp-action="PrincipalComponentes" asp-controller="Datos" class="btn btn-default">Cancelar</a>
        </form>
    </div>
    <div class="col-lg-2">

    </div>
</div>