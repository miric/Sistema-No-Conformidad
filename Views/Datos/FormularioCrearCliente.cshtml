@model ListaCliente
@{
    ViewData["Title"] = "Datos Page";
}

<div class="row">
    <!-- Welcome -->
    <div class="col-lg-12">
        <div class="alert alert-info">
            <i></i><P>CREAR CLIENTE</P>

        </div>
    </div>
    <!--end  Welcome -->
</div>

<div>
    <div class="col-lg-10">
        <form asp-action="FormularioCrearCliente" class="form-horizontal" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="@Model.ClienteUnico.Nombre" class="col-lg-2 ">Nombre</label>
                <div class="col-lg-3">
                    <input asp-for="nombre" class="form-control" required />
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 "></label>
                <div class="col-lg-3">

                    <button type="submit" class="btn btn-primary">Crear</button>
                    <a asp-action="IndiceCliente" asp-controller="Datos" class="btn btn-default">Cancelar</a>
                </div>
            </div>

 

        </form>
    </div>
    <div class="col-lg-2">

    </div>
</div>