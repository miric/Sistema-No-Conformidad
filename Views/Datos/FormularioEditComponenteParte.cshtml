<div>
    <div class="col-lg-10">
        <form asp-action="FormularioEditComponenteParte" class="form-horizontal" method="post">

            <div class="form-group">

                <h3 class="col-lg-6">Editar Parte del Componente: @Model.ListaComponentes.FirstOrDefault(c => c.Id == @Model.ComponenteId).Nombre</h3>


            </div>
            <div class="form-group">
                <label asp-for="@Model.ComponenteParteId" class="col-lg-2 ">ID Componente Parte</label>
                <div class="col-lg-3">
                    <input asp-for="@Model.ComponenteParteId" class="form-control" readonly="readonly" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="@Model.variable" class="col-lg-2 ">ID Modelo</label>
                <div class="col-lg-3">
                    <input asp-for="@Model.variable" class="form-control" readonly="readonly" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="@Model.ComponenteId" class="col-lg-2 ">ID Componente</label>
                <div class="col-lg-3">
                    <input asp-for="@Model.ComponenteId" class="form-control" readonly="readonly" />
                </div>
            </div>


            <div class="form-group">
                <label asp-for="@Model.EquipoId" class="col-lg-2 ">Nombre Componente</label>
                <div class="col-lg-3">
                    <input asp-for="@Model.ListaComponentes.FirstOrDefault(c => c.Id == @Model.ComponenteId).Nombre" class="form-control" readonly="readonly" />
                </div>
            </div>





            <div class="form-group">
                <label asp-for="@Model.ParteId" class="col-lg-2">Asociar Parte:</label>
                <div class="col-lg-3">
                    <select asp-for="@Model.ParteId" class="form-control" id="sel1" required>
                        <option value="" disabled selected>Select your option</option>
                        @foreach (var kvp in @Model.listaPartes)
                        {

                            <option value="@kvp.Id">@kvp.Nombre</option>
                        }

                    </select>
                </div>
            </div>




            <div class="text-danger" asp-validation-summary="All"></div>

            <button type="submit" class="btn btn-primary">Asociar Parte</button>
            <a asp-action="PrincipalPartes" class="btn btn-default" asp-route-ComponenteId="@Model.ComponenteId" asp-route-variable="@Model.variable">Cancelar</a>
        </form>
    </div>
    <div class="col-lg-2">

    </div>
</div>