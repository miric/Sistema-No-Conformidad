@model VerificacionModels
@{
    string DescripcionVariable = "";
    if (Model.VerificacionUnica.Descripcion != null)
    {

        DescripcionVariable = Model.VerificacionUnica.Descripcion.TrimEnd();
    }
}

<div class="row">
    <!-- Welcome -->
    <div class="col-lg-12">
        <div class="alert alert-info">
            <i></i><P>EDITAR VERIFICACION </P>
        </div>
    </div>

</div>
<form asp-action="FormularioEditVerificacion" asp-controller="Verificacion" class="form-horizontal" role="form" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <label class="col-lg-2">EventoId</label>
        <div class="col-lg-5">
            <input class="form-control" asp-for="@Model.EventoId" readonly="readonly" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-lg-2">Verificacion Id</label>
        <div class="col-lg-5">
            <input class="form-control" asp-for="@Model.VerificacionUnica.Id" readonly="readonly" />
        </div>
    </div>

    <div class="form-group">
        @*<label  class="col-lg-2 control-label">Fecha Identificacion</label>*@
        @Html.Label("Fecha Registro", null, new { @class = " col-lg-2" })
        <div class="col-lg-5">
            <input class="form-control" asp-for="@Model.VerificacionUnica.FechaRegistro" name="FechaRegistro" type="date" required />
        </div>
    </div>

    @if (Model.VerificacionUnica.Efectiva != null)
    {


        <div class="form-group">
            <label class="col-lg-2">¿Fue Efectivo?</label>
            <div class="col-lg-5">
                <select asp-for="@Model.VerificacionUnica.Efectiva" class="form-control" id="sel2" required>
                    <option value="" disabled selected>Selecciona tu opción</option>
                    <option value="true">Si</option>
                    <option value="false">No</option>

                </select>
            </div>
        </div>

    }

    @if (Model.VerificacionUnica.Descripcion != null)
    {

        <div class="form-group">
            <label class="col-lg-2 ">Descripción</label>
            <div class="col-lg-5">
                <textarea name="Descripcion" class="form-control" asp-for="@DescripcionVariable" id="textarea"
                          placeholder="Descripcion" required> </textarea>
            </div>
        </div>

    }
    else
    {

        <div class="form-group">
            <label class="col-lg-2 ">Descripción</label>
            <div class="col-lg-5">
                <textarea name="Descripcion" class="form-control"
                          placeholder="Descripcion" required> </textarea>
            </div>
        </div>

    }


    <div class="text-danger" asp-validation-summary="All"></div>
    <button type="submit" asp-action="FormularioEditVerificacion" asp-controller="Verificacion" class="btn btn-warning">Editar</button>
    <a asp-action="Index" asp-controller="EventoSecuencia" class="btn btn-default" asp-route-EventoID="@Model.EventoId">Cancelar</a>
</form> 