@model IEnumerable<IdentityRole>
<div class="row">
    <!-- Welcome -->
    <div class="col-lg-12">
        <div class="alert alert-info">
            <i></i><P>ROLES</P>

        </div>
    </div>
    <!--end  Welcome -->
</div>


<div class="panel panel-primary">
    <div class="panel-heading">

ROLES

    </div>
    <div id="collapseOne" class="panel-collapse collapse in">
        <div class="panel-body">
            <div class="table-responsive">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <table class="table table-condensed table-bordered table-bordered">
                    <tr><th>ID</th><th>Name</th><th>Accion</th></tr>
                    @if (Model.Count() == 0)
                    {
                        <tr><td colspan="4" class="text-center">No Roles</td></tr>
                    }
                    else
                    {
                        foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.Id</td>
                                <td>@role.Name</td>
                                @*<td identity-role="@role.Id"></td>*@
                                <td>
                                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                                        <a class="btn btn-sm btn-primary" asp-action="Edit"
                                           asp-route-id="@role.Id">Editar</a>
                                        @*<button type="submit"
                                    class="btn btn-sm btn-danger" >Eliminar</button>*@
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </table>
            </div>
            @*No borrar esto ya que sirve para crear nuevos roles*@
            <a class="btn btn-primary" asp-action="Create">Crear</a>
        </div>
    </div>
</div>


